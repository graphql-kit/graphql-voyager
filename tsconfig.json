{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "lib",
    "pretty": true,
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "jsx": "react-jsx"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".tmp",
    "dist",
    "demo-dist",
    "**/**/voyager.worker.js"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./manual-types.d.ts",
    "demo/**/*.tsx"
  ]
}
